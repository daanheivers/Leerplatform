@model Leerplatform.Models.Lokaal

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Lokaal</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plaats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plaats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LokaalId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LokaalId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capaciteit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capaciteit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Middelen)
        </dt>
        @foreach (var middel in Model.Middelen)
        {
            <dd class="col-sm-10">
                @middel.Naam
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.LokaalId">Wijzigen</a> |
    <a asp-action="Index">Terug</a>
</div>
