@model IEnumerable<Leerplatform.Models.Planning>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Nieuwe Planning</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlanningId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlanningId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlanningId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
